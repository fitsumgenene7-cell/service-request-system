<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.UserInfoController"
            prefWidth="500" prefHeight="550">

    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Label text="User Information"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

            <Separator prefWidth="400"/>

            <GridPane hgap="15" vgap="20">
                <padding>
                    <Insets top="10" bottom="20"/>
                </padding>

                <!-- Name Field -->
                <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="nameField"
                           promptText="Enter your full name"
                           prefWidth="300"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- ID Field -->
                <Label text="Student/Staff ID:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="idField"
                           promptText="Enter your ID"
                           prefWidth="300"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Role Selection (RadioButtons - single selection) -->
                <Label text="Your Role:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <RadioButton fx:id="studentRadioButton" text="Student"/>
                    <RadioButton fx:id="lecturerRadioButton" text="Lecturer"/>
                    <RadioButton fx:id="staffRadioButton" text="Staff"/>
                    <RadioButton fx:id="facultyRadioButton" text="Faculty"/>
                    <RadioButton fx:id="administratorRadioButton" text="Administrator"/>
                </VBox>

                <!-- Department Selection -->
                <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <ComboBox fx:id="departmentCombo"
                          promptText="Select your department"
                          prefWidth="300"
                          GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>

            <Button text="Continue to Service Request"
                    onAction="#handleContinue"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"
                    prefWidth="220" prefHeight="35">
                <padding>
                    <Insets top="8" right="15" bottom="8" left="15"/>
                </padding>
            </Button>

            <Label text="NB: All fields are required to continue"
                   style="-fx-font-size: 15px; -fx-text-fill: #e74c3c;"/>
        </VBox>
    </center>

</BorderPane>